{
  "apps": [
    {
      "script": "./bin/worker",
      "args": [
        "--settings", "settings/prod.json",
        "--delay=1000",
        "lib/strategy/sportRadar/UpdateGamesStrategy.coffee"
      ],
      "exec_interpreter": "coffee",
      "exec_mode": "fork",
      "instances": 1,
      "max_memory_restart": "1024M"
    }
  ],

  "deploy": {
    "prod": {
      "user": "root",
      "host": "do.pickk-prod",
      "ref": "origin/master",
      "repo": "git@bitbucket.org:IcyEagle/pickk-import.git",
      "path": "/opt/pickk-import",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json --env prod"
    }
  }
}
